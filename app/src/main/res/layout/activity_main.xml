<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82b9e6"
    android:layoutDirection="ltr"
    tools:context=".MainActivity">

<EditText
    android:background="#FFF"
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:id="@+id/E_text_1"
    android:hint="name"
    android:textColorHint="#d4d4d4"
    android:layout_marginBottom="5dp"
    ></EditText>
<EditText
    android:background="#FFF"
    android:layout_width="200dp"
    android:layout_height="50dp"
    android:id="@+id/E_text_2"
    android:layout_toRightOf="@id/E_text_1"
    android:layout_marginLeft="5dp"
    android:hint="address"
    android:textColorHint="#d4d4d4"
    android:layout_marginBottom="5dp"
    ></EditText>
<EditText
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/E_text_3"
    android:layout_below="@id/E_text_1"
    android:layout_marginLeft="5dp"
    android:hint="address"
    android:textColorHint="#d4d4d4"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    ></EditText>
<EditText
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="400dp"

    android:id="@+id/E_text_4"
    android:layout_below="@id/E_text_3"
    android:layout_marginLeft="5dp"
    android:hint="Message"
    android:gravity="top"
    android:textColorHint="#d4d4d4"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"


    ></EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/E_text_4"
        android:layout_centerHorizontal="true"
        android:text="submit"

        ></Button>








</RelativeLayout>